<!DOCTYPE html>
<html>
<head>
  <title>TrackIt</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if current_user %>
  <%= link_to current_user.username, edit_user_registration_path %> -
  <%= link_to "New Project", new_projects_path %>
  <%= link_to('Sign Out', destroy_user_session_path, :class => "sign-out", :method => :delete) %>
<% end %>

<%= yield %>

</body>
</html>
